<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">


    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tab_menu"
        android:layout_marginBottom="4dp">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="185dp"
            android:layout_height="150dp"
            android:background="@drawable/zixun" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="185dp"
            android:layout_height="150dp"
            android:layout_marginLeft="210dp"
            android:background="@drawable/zixun1" />

        <ImageView
            android:layout_marginTop="160dp"
            android:id="@+id/imageView10"
            android:layout_width="185dp"
            android:layout_height="150dp"
            android:background="@drawable/pythone1" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="185dp"
            android:layout_height="150dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/java1" />

        <ImageView
            android:layout_marginTop="320dp"
            android:id="@+id/imageView12"
            android:layout_width="185dp"
            android:layout_height="150dp"
            android:background="@drawable/pythone3" />

        <ImageView
            android:layout_marginLeft="210dp"
            android:layout_marginTop="320dp"
            android:id="@+id/imageView13"
            android:layout_width="185dp"
            android:layout_height="150dp"
            android:background="@drawable/java3" />

        <ImageView
            android:layout_marginTop="480dp"
            android:id="@+id/imageView14"
            android:layout_width="185dp"
            android:layout_height="150dp"
            android:background="@drawable/java4" />

        <ImageView
            android:layout_marginLeft="210dp"
            android:layout_marginTop="480dp"
            android:id="@+id/imageView15"
            android:layout_width="185dp"
            android:layout_height="150dp"
            android:background="@drawable/zixun6" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <RadioButton
            android:id="@+id/kecheng"
            style="@style/TabMenuItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/kecheng1"
            android:gravity="center"
            android:text="课程" />

        <RadioButton
            style="@style/TabMenuItem"
            android:id="@+id/xiti"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:drawableTop="@drawable/fenshu"
            android:text="分数"/>


        <RadioButton
            android:id="@+id/zixun"
            style="@style/TabMenuItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:drawableTop="@drawable/ic_message"

            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="资讯" />

        <RadioButton
            style="@style/TabMenuItem"
            android:id="@+id/myy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/wode"
            android:drawablePadding="3dp"
            android:gravity="center"



            android:text="我的"/>

    </LinearLayout>


</RelativeLayout>
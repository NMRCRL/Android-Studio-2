<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CalculatorActivity">

    <TextView
        android:id="@+id/tv_input"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    </TextView>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </TextView>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_C"
            android:layout_width="0dp"
            android:onClick="calculate"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="C"
            android:textSize="32sp"/>
        <Button
            android:id="@+id/btn_DEL"
            android:layout_width="0dp"
            android:onClick="calculate"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="DEL"
            android:textSize="32sp"/>
        <Button
            android:id="@+id/btn_bai"
            android:layout_width="0dp"
            android:onClick="calculate"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="%"
            android:textSize="32sp"/>
        <Button
            android:id="@+id/btn_chu"
            android:layout_width="0dp"
            android:onClick="calculate"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="รท"
            android:textSize="32sp"/>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:onClick="calculate"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="7"
            android:textSize="32sp"/>
        <Button
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:onClick="calculate"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="8"
            android:textSize="32sp"/>
        <Button

            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:onClick="calculate"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="9"
            android:textSize="32sp"/>
        <Button
            android:id="@+id/btn_chen"
            android:layout_width="0dp"
            android:onClick="calculate"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="ร"
            android:textSize="32sp"/>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:onClick="calculate"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="4"
            android:textSize="32sp"/>
        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:onClick="calculate"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="5"
            android:textSize="32sp"/>
        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:onClick="calculate"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="6"
            android:textSize="32sp"/>
        <Button
            android:id="@+id/btn_jian"
            android:layout_width="0dp"
            android:onClick="calculate"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="-"
            android:textSize="32sp"/>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:onClick="calculate"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="1"
            android:textSize="32sp"/>
        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:onClick="calculate"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="2"
            android:textSize="32sp"/>
        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:onClick="calculate"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="3"
            android:textSize="32sp"/>
        <Button
            android:id="@+id/btn_jia"
            android:onClick="calculate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="+"
            android:textSize="32sp"/>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_00"            android:onClick="calculate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="00"
            android:textSize="32sp"/>
        <Button
            android:id="@+id/btn_0"            android:onClick="calculate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="0"
            android:textSize="32sp"/>
        <Button
            android:id="@+id/btn_dian"            android:onClick="calculate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="."
            android:textSize="32sp"/>
        <Button
            android:id="@+id/btn_deng"            android:onClick="calculate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:text="="
            android:textSize="32sp"/>
    </GridLayout>




</GridLayout>